<!DOCTYPE html>
<html lang="ja">
<head>
  <title><%= @title || 'untitled' %> | WebWalker</title>
  <meta charset="UTF-8" />
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
</head>
<body>

<!-- navigation bar -->
<div class="navbar navbar-inverse">
  <div class="navbar-inner">
  <ul class="nav">
	<li><a href="/">WebWalker</a></li>
	<li><a href="/project">プロジェクト一覧</a></li>
	<li><a href="/url">URL一覧</a></li>
  </ul>
  </div>
</div>

<% [:error,:info,:success].each do |tag| %>
<% next unless flash[tag] %>
<div class="alert alert-<%=tag%>">
  <button type="button" class="close" data-dismiss="alert">&times;</button><%=flash[tag]%>
</div>
<% end %>

<!-- main content -->
<div class="container">
<%=yield%>
</div>

<!-- footer -->
<script src="/javascripts/jquery-1.9.1.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>

</body>
</html>
